<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryLight"
    tools:context="com.inducesmile.androidmultiquiz.BestScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/best_score_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_best_score"
            android:textSize="@dimen/_24sdp"
            android:textColor="@color/colorPrimaryText"/>


        <com.github.pavlospt.CircleView
            android:id="@+id/your_best_score"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:cv_titleSubtitleSpace="40"
            app:cv_fillColor="@color/colorPrimaryLight"
            app:cv_strokeColorValue="@color/colorPrimaryDark"
            app:cv_backgroundColorValue="@color/colorPrimaryDark"
            app:cv_titleColor="@color/colorPrimary"
            app:cv_titleSize="@dimen/_40sdp"
            app:cv_titleText="@string/total_best_score"
            app:cv_subtitleSize="@dimen/_12sdp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>



</LinearLayout>
